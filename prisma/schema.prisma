generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://amaya:amaya@localhost:5432/amaya"
}

model ProductApp {
  id             Int              @id @default(autoincrement())
  name           AppName          @unique
  ProductAppLogo ProductAppLogo[]
  Review         Review[]
}

model ProductAppLogo {
  id           Int        @id @default(autoincrement())
  productApp   ProductApp @relation(fields: [productAppId], references: [id])
  productAppId Int
  logoFileName String
  active       Boolean    @default(false)

  @@index([productAppId])
}

model Review {
  id           Int        @id @default(autoincrement())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  productApp   ProductApp @relation(fields: [productAppId], references: [id])
  productAppId Int
  score        Int
  text         String?
  signature    String     @default("Anonymous")

  @@index([signature])
}

enum AppName {
  FARM
  ALPHABET
  CARS
  COLORS
  PUZZLE
}
